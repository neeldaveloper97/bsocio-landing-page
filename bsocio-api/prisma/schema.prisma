generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              String          @id
  email           String          @unique
  password        String?
  role            Role
  dob             DateTime
  createdAt       DateTime        @default(now())
  oauthProvider   OAuthProvider?
  oauthId         String?         @unique
  isPermanentUser Boolean         @default(false)
  isTermsAccepted Boolean
  gender          Gender?
  invitationLink  String?
  isPhoneVerified Boolean         @default(false)
  phone           String?
  adminActivities AdminActivity[]
  magicLinks      MagicLink[]
  isActive        Boolean         @default(true)
}

model Faq {
  id         String        @id @default(cuid())
  question   String
  answer     String
  category   FaqCategory
  state      FaqState      @default(DRAFT)
  status     FaqStatus     @default(ACTIVE)
  visibility FaqVisibility @default(PUBLIC)
  sortOrder  Int           @default(0)
  views      Int           @default(0)
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt

  @@index([state])
  @@index([category])
  @@index([sortOrder])
}

model AdminActivity {
  id        String            @id @default(cuid())
  type      AdminActivityType
  title     String
  message   String?
  actorId   String?
  createdAt DateTime          @default(now())
  actor     User?             @relation(fields: [actorId], references: [id])

  @@index([createdAt])
  @@index([type])
  @@index([actorId])
}

model LegalDocument {
  id            String             @id @default(cuid())
  type          LegalDocumentType  @unique
  title         String
  content       String
  versionNotes  String?
  effectiveDate DateTime
  state         LegalDocumentState @default(DRAFT)
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt
}

model ContactInquiry {
  id        String        @id @default(cuid())
  reason    ContactReason
  fullName  String
  email     String
  phone     String?
  country   String
  message   String
  status    ContactStatus @default(NEW)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  @@index([status])
  @@index([reason])
  @@index([createdAt])
}

model NewsArticle {
  id              String       @id @default(cuid())
  title           String
  author          String
  category        NewsCategory
  excerpt         String
  content         String
  featuredImage   String
  publicationDate DateTime
  tags            String[]
  status          NewsStatus   @default(DRAFT)
  views           Int          @default(0)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  @@index([status])
  @@index([publicationDate])
}

model MagicLink {
  id        String        @id @default(cuid())
  jti       String        @unique
  userId    String
  type      MagicLinkType @default(MAGIC)
  expiresAt DateTime
  used      Boolean       @default(false)
  createdAt DateTime      @default(now())
  user      User          @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([jti])
}

model Event {
  id               String          @id @default(cuid())
  title            String
  eventDate        DateTime
  eventTime        String?
  venue            String
  maxAttendees     Int?
  currentAttendees Int             @default(0)
  imageUrl         String?
  description      String?
  status           EventStatus     @default(DRAFT)
  visibility       EventVisibility @default(PUBLIC)
  state            EventState      @default(UPCOMING)
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt

  @@index([eventDate])
  @@index([status])
  @@index([state])
}

model EmailCampaign {
  id            String              @id @default(cuid())
  name          String
  subject       String
  content       String
  audience      EmailAudience       @default(ALL_USERS)
  sendType      EmailSendType
  scheduledAt   DateTime?
  status        EmailCampaignStatus @default(DRAFT)
  totalSent     Int                 @default(0)
  delivered     Int                 @default(0)
  openRate      Float               @default(0)
  clickRate     Float               @default(0)
  createdAt     DateTime            @default(now())
  updatedAt     DateTime            @updatedAt
  filters       Json?
  targetUserIds String[]

  @@index([status])
  @@index([scheduledAt])
}

model AwardCategory {
  id          String    @id @default(cuid())
  name        String
  description String?
  icon        String?
  color       String?
  status      String    @default("ACTIVE")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  nominees    Nominee[]

  @@index([status])
}

model Nominee {
  id              String        @id @default(cuid())
  name            String
  title           String?
  organization    String?
  categoryId      String
  imageUrl        String?
  about           String?
  keyAchievements String[]
  impactStory     String?
  quote           String?
  status          String        @default("PENDING")
  isWinner        Boolean       @default(false)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  category        AwardCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@index([categoryId])
  @@index([status])
  @@index([isWinner])
}

model Ceremony {
  id          String   @id @default(cuid())
  title       String
  date        DateTime
  location    String
  venue       String?
  description String?
  imageUrl    String?
  status      String   @default("UPCOMING")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([date])
  @@index([status])
}

model SpecialGuest {
  id        String   @id @default(cuid())
  name      String
  title     String?
  bio       String?
  imageUrl  String?
  status    String   @default("ACTIVE")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
}

enum ContactReason {
  MEDIA_PRESS
  PARTNERSHIPS
  REPORT_SCAM
  GENERAL_INQUIRY
}

enum ContactStatus {
  NEW
  IN_PROGRESS
  RESOLVED
}

enum OAuthProvider {
  GOOGLE
  YOUTUBE
  TIKTOK
  INSTAGRAM
  FACEBOOK
  OTHER
}

enum Role {
  SUPER_ADMIN
  CONTENT_ADMIN
  COMMUNICATIONS_ADMIN
  ANALYTICS_VIEWER
  USER
}

enum PaymentStatus {
  SUCCEEDED
  FAILED
  PENDING
  CANCELED
  REQUIRES_ACTION
}

enum FaqState {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum FaqStatus {
  ACTIVE
  INACTIVE
}

enum FaqVisibility {
  PUBLIC
  PRIVATE
}

enum FaqCategory {
  GENERAL
  BILLING
  TECHNICAL
  OTHER
}

enum LegalDocumentType {
  PRIVACY_POLICY
  TERMS_OF_USE
}

enum LegalDocumentState {
  DRAFT
  PUBLISHED
}

enum AdminActivityType {
  USER_LOGIN
  FAQ_CREATED
  FAQ_UPDATED
  FAQ_ARCHIVED
  SYSTEM
  NEWS_CREATED
  NEWS_UPDATED
  NEWS_ARCHIVED
  LEGAL_CREATED
  LEGAL_UPDATED
  EVENT_CREATED
  EVENT_UPDATED
  EVENT_DELETED
  AWARD_CATEGORY_CREATED
  AWARD_CATEGORY_UPDATED
  AWARD_CATEGORY_DELETED
  NOMINEE_CREATED
  NOMINEE_UPDATED
  NOMINEE_DELETED
  CEREMONY_CREATED
  CEREMONY_UPDATED
  CEREMONY_DELETED
  SPECIAL_GUEST_CREATED
  SPECIAL_GUEST_UPDATED
  SPECIAL_GUEST_DELETED
}

enum NewsStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum NewsCategory {
  PRESS_RELEASE
  MEDIA_COVERAGE
  ANNOUNCEMENT
  IMPACT_STORY
  PARTNERSHIP
}

enum MagicLinkType {
  MAGIC
  SIGNUP
}

enum EmailAudience {
  ALL_USERS
  SEGMENTED_USERS
  MANUAL_SELECTION
}

enum EmailSendType {
  NOW
  SCHEDULED
}

enum EmailCampaignStatus {
  DRAFT
  SCHEDULED
  SENT
}

enum EventStatus {
  DRAFT
  PUBLISHED
}

enum EventVisibility {
  PUBLIC
  PRIVATE
}

enum EventState {
  UPCOMING
  ONGOING
  COMPLETED
}

enum Gender {
  MALE
  FEMALE
  NON_BINARY
  PREFER_NOT_TO_SAY
}

model Subscriber {
  id        String   @id @default(cuid())
  email     String   @unique
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
