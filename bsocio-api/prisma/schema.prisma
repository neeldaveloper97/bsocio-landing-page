generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              String          @id
  email           String          @unique
  password        String?
  role            Role
  dob             DateTime
  createdAt       DateTime        @default(now())
  oauthProvider   OAuthProvider?
  oauthId         String?         @unique
  isPermanentUser Boolean         @default(false)
  isTermsAccepted Boolean
  adminActivities AdminActivity[]
}

model Faq {
  id         String        @id @default(cuid())
  question   String
  answer     String
  category   FaqCategory
  state      FaqState      @default(DRAFT)
  status     FaqStatus     @default(ACTIVE)
  visibility FaqVisibility @default(PUBLIC)
  sortOrder  Int           @default(0)
  views      Int           @default(0)
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt

  @@index([state])
  @@index([category])
  @@index([sortOrder])
}

model AdminActivity {
  id        String            @id @default(cuid())
  type      AdminActivityType
  title     String
  message   String?
  actorId   String?
  createdAt DateTime          @default(now())
  actor     User?             @relation(fields: [actorId], references: [id])

  @@index([createdAt])
  @@index([type])
  @@index([actorId])
}

model LegalDocument {
  id            String             @id @default(cuid())
  type          LegalDocumentType  @unique
  title         String
  content       String
  versionNotes  String?
  effectiveDate DateTime
  state         LegalDocumentState @default(DRAFT)
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt
}


model ContactInquiry {
  id        String               @id @default(cuid())
  reason    ContactReason
  fullName  String
  email     String
  phone     String?
  country   String
  message   String

  status    ContactStatus        @default(NEW)

  createdAt DateTime             @default(now())
  updatedAt DateTime             @updatedAt

  @@index([status])
  @@index([reason])
  @@index([createdAt])
}

enum ContactReason {
  MEDIA_PRESS
  PARTNERSHIPS
  REPORT_SCAM
  GENERAL_INQUIRY
}

enum ContactStatus {
  NEW
  IN_PROGRESS
  RESOLVED
}


enum OAuthProvider {
  GOOGLE
  YOUTUBE
  TIKTOK
  INSTAGRAM
  FACEBOOK
  OTHER
}

enum Role {
  ADMIN
  USER
}

enum PaymentStatus {
  SUCCEEDED
  FAILED
  PENDING
  CANCELED
  REQUIRES_ACTION
}

enum FaqState {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum FaqStatus {
  ACTIVE
  INACTIVE
}

enum FaqVisibility {
  PUBLIC
  PRIVATE
}

enum FaqCategory {
  GENERAL
  REWARDS
  GETTING_STARTED
  IMPACT
}

enum LegalDocumentType {
  PRIVACY_POLICY
  TERMS_OF_USE
}

enum LegalDocumentState {
  DRAFT
  PUBLISHED
}

enum AdminActivityType {
  USER_LOGIN
  FAQ_CREATED
  FAQ_UPDATED
  FAQ_ARCHIVED
  SYSTEM
}
